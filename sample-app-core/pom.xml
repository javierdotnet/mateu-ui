<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>all</artifactId>
        <groupId>io.mateu.ui</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <groupId>io.mateu.ui</groupId>
    <artifactId>sample-app-core</artifactId>
    <packaging>war</packaging>


    <name>sample-app-core</name>
    <url>http://maven.apache.org</url>


    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>


    <build>
        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>io.mateu</groupId>
                <artifactId>mateu-maven-plugin</artifactId>
                <version>1.0-SNAPSHOT</version>
            </plugin>



            <plugin>
                <groupId>org.eclipse.jetty</groupId>
                <artifactId>jetty-maven-plugin</artifactId>
                <version>9.2.3.v20140905</version>
            </plugin>

        </plugins>

    </build>

    <dependencies>

        <dependency>
            <groupId>io.mateu.ui</groupId>
            <artifactId>core</artifactId>
            <version>1.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>3.8.1</version>
            <scope>test</scope>
        </dependency>

    </dependencies>




    <profiles>
        <profile>
            <id>vaadin</id>

            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

            <dependencies>
                <dependency>
                    <groupId>io.mateu.ui</groupId>
                    <artifactId>port-vaadin</artifactId>
                    <version>1.0-SNAPSHOT</version>
                    <type>war</type>
                    <scope>compile</scope>
                </dependency>


                <dependency>
                    <groupId>org.glassfish.jersey.core</groupId>
                    <artifactId>jersey-common</artifactId>
                    <version>2.26</version>
                </dependency>

                <dependency>
                    <groupId>org.glassfish.jersey.inject</groupId>
                    <artifactId>jersey-hk2</artifactId>
                    <version>2.26</version>
                </dependency>

            </dependencies>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-war-plugin</artifactId>
                        <configuration>
                            <failOnMissingWebXml>false</failOnMissingWebXml>

                            <overlays>
                                <overlay></overlay>
                                <overlay>
                                    <groupId>io.mateu.ui</groupId>
                                    <artifactId>port-vaadin</artifactId>
                                    <!--
                                    <classifier>war</classifier>
                                    -->
                                    <!--
                                    <excludes>
                                        <exclude>WEB-INF/classes/images/sampleimage-dependency.jpg</exclude>
                                    </excludes>
                                    -->
                                </overlay>
                            </overlays>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>html5</id>

            <properties>
                <teavm.version>0.5.1</teavm.version>
            </properties>


            <dependencies>

                <!-- Emulator of Java class library for TeaVM -->
                <dependency>
                    <groupId>org.teavm</groupId>
                    <artifactId>teavm-classlib</artifactId>
                    <version>${teavm.version}</version>
                    <scope>provided</scope>
                </dependency>

                <!-- JavaScriptObjects (JSO) - a JavaScript binding for TeaVM -->
                <dependency>
                    <groupId>org.teavm</groupId>
                    <artifactId>teavm-jso-apis</artifactId>
                    <version>${teavm.version}</version>
                    <scope>provided</scope>
                </dependency>

                <dependency>
                    <groupId>io.mateu.ui</groupId>
                    <artifactId>teavm-plugin</artifactId>
                    <version>1.0-SNAPSHOT</version>
                    <scope>provided</scope>
                </dependency>

                <dependency>
                    <groupId>io.mateu.ui</groupId>
                    <artifactId>port-html5</artifactId>
                    <version>1.0-SNAPSHOT</version>
                    <type>war</type>
                    <scope>compile</scope>
                </dependency>

                <dependency>
                    <groupId>io.mateu.ui</groupId>
                    <artifactId>port-html5-core</artifactId>
                    <version>1.0-SNAPSHOT</version>
                    <scope>compile</scope>
                </dependency>



            </dependencies>

            <build>
                <plugins>
                    <!-- Configure WAR plugin to include JavaScript files generated by TeaVM -->



                    <!-- Configure TeaVM -->
                    <plugin>
                        <groupId>org.teavm</groupId>
                        <artifactId>teavm-maven-plugin</artifactId>
                        <version>0.5.1</version>

                        <executions>
                            <execution>
                                <id>web-client</id>
                                <goals>
                                    <goal>compile</goal>
                                </goals>
                                <configuration>
                                    <!-- Directory where TeaVM should put generated files. This configuration conforms to the settings
                           of the WAR plugin -->
                                    <targetDirectory>${project.build.directory}/generated/js/teavm</targetDirectory>

                                    <!-- Main class, containing static void main(String[]) -->
                                    <!-- <mainClass>io.mateu.ui.Port</mainClass> -->
                                    <mainClass>io.mateu.ui.Port</mainClass>

                                    <!-- Whether TeaVM should produce minified JavaScript. Can reduce JavaScript file size more than
                           two times -->
                                    <minifying>true</minifying>

                                    <!-- Whether TeaVM should produce debug information for its built-in debugger -->
                                    <debugInformationGenerated>true</debugInformationGenerated>

                                    <!-- Whether TeaVM should produce source maps file -->
                                    <sourceMapsGenerated>true</sourceMapsGenerated>

                                    <!-- Whether TeaVM should also put source files into output directory,
                           for compatibility with source maps -->
                                    <sourceFilesCopied>true</sourceFilesCopied>

<!--
                                    <transformers>io.mateu.ui.teavm.plugin.MateuTransformer</transformers>
-->

                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-war-plugin</artifactId>
                        <version>2.4</version>
                        <configuration>
                            <failOnMissingWebXml>false</failOnMissingWebXml>

                            <webResources>
                                <resource>
                                    <directory>${project.build.directory}/generated/js</directory>
                                </resource>
                            </webResources>

                            <overlays>
                                <overlay></overlay>
                                <overlay>
                                    <groupId>io.mateu.ui</groupId>
                                    <artifactId>port-html5</artifactId>
                                    <!--
                                    <classifier>war</classifier>
                                    -->
                                    <!--
                                    <excludes>
                                        <exclude>WEB-INF/classes/images/sampleimage-dependency.jpg</exclude>
                                    </excludes>
                                    -->
                                </overlay>
                            </overlays>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>run-locally</id>

            <dependencies>
                <dependency>
                    <groupId>io.mateu.ui</groupId>
                    <artifactId>port-javafx</artifactId>
                    <version>1.0-SNAPSHOT</version>
                    <scope>compile</scope>
                </dependency>
            </dependencies>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.6.0</version>
                        <executions>
                            <execution>
                                <phase>test</phase>
                                <goals>
                                    <goal>java</goal>
                                </goals>
                                <configuration>
                                    <mainClass>io.mateu.ui.javafx.Main</mainClass>
                                    <!--
                                    <arguments>
                                        <argument>arg0</argument>
                                        <argument>arg1</argument>
                                    </arguments>
                                    -->
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
